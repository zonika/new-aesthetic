<div class="users-search" id="remote">
  <%= form_tag search_path, :method => 'post', remote: true, :class => 'search-bar-center' do %>
      <div class="form-group">
        <span><%= text_field_tag :query, params[:query], :class => 'search rounded searchfield', :placeholder => "    Search for an artist, work, or tag..." %>
        <%= submit_tag('Search', class: 'btn btn-sm') %>
      </div>
  <% end %>
</div>
