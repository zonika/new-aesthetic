<% content_for :modal_header do %>Send a Message<% end %>
<% content_for :modal_content do %>
  <%= render 'message' %>
<% end %>
$("#modal-window").html("<%= j render 'layouts/modal_layout' %>");

setTimeout(function(){
  // close modal window once request complete
  $(function(){
     $('#modal-window').modal('toggle');
  });
}, 3000);
