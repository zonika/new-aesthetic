<% if @user.works %>
  <% @user.works.each do |image| %>
    <%= image_tag image.image_url %>
    <%= image.name %>
  <% end %>
<% end %>

<% if @user.works.length < 3 %>
<%= form_for [@user, Work.new] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :image_url, 'Image' %>
  <%= f.file_field :image_url %>
  <%= f.submit "Upload Photo" %>
<% end %>
<% else %>
  You can only upload 3 images!
<% end %>
