<% if user_signed_in? %>
  <% if @user.works && @user.masterpiece %>
		<div class= "row">
			<div class="col-md-6">
				<%= render '/profiles/form' %>
			</div>
			<div class="col-md-6">
				<h3>Upload a new piece</h3>
				<%= render '/works/upload' %>
			</div>
		</div>
	<% else %>
		<div class= "row">
			<div class="col-md-6">
				<%= render '/profiles/form_masterpiece' %>
			</div>
			<div class="col-md-6">
				<h3>Upload a new piece</h3>
				<%= render '/works/upload' %>
			</div>
		</div>
	<% end %>
	<% else %>
		You must be signed in to see this page
<% end %>
