<% if user_signed_in? %>
	<% if @user.works %>

		<div class= "row">
			<div class="col-md-6">
				<%= render 'form' %>
			</div>
			<div class="col-md-6">
				<h3>Upload a new piece</h3>
				<%= render '/works/upload' %>
			</div>
		</div>
	<% else %>
		You must be signed in to see this page
	<% end %>
<% end %>
